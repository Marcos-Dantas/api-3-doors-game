generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid()) @map("_id") 
  name  String
  email String  @unique
  password String
  city String 
  state String
  age Int
  player Player?
}

model Player {
    idPlayer String @id @default(uuid()) @unique 
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    score Int?
    timeFinishedGame DateTime?
    question1 String? // Conhecia a Lenda?
    question2 String?  // O jogo ajudou vocÃª a conhecer essas lendas?
    user User @relation(fields: [userEmail], references: [email])
    userEmail String @unique
}
